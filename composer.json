{
    "name": "spip/spip",
    "description": "Système de Publication pour l’Internet",
    "license": "GPL-3.0-only",
    "type": "project",
    "keywords": [
        "cms",
        "spip"
    ],
    "require": {
        "php": "^8.2",
        "spip-league/composer-installer": "0.7.x-dev",
        "spip-league/kernel": "^2.x-dev",
        "spip/classic-distribution": "^5.x-dev",
        "spip/security": "^1.6",
        "symfony/polyfill-php83": "^1.31",
        "symfony/polyfill-php84": "^1.31"
    },
    "require-dev": {
        "lolli42/finediff": "^1.1",
        "phpunit/phpunit": "^11.4"
    },
    "repositories": {
        "spip": {
            "type": "composer",
            "url": "https://get.spip.net/composer"
        }
    },
    "minimum-stability": "dev",
    "autoload-dev": {
        "psr-4": {
            "Spip\\Test\\": "ecrire/tests/"
        }
    },
    "archive": {
        "name": "spip",
        "exclude": [
            "!/ecrire",
            "!/plugins-dist",
            "!/prive",
            "!/squelettes-dist",
            "!/vendor"
        ]
    },
    "config": {
        "allow-plugins": {
            "spip-league/composer-installer": true
        },
        "platform": {
            "php": "8.2.25"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.0.x-dev"
        },
        "spip": {
            "back_office": "spip/ecrire",
            "extensions": [
                "spip/aide",
                "spip/archiviste",
                "spip/bigup",
                "spip/compagnon",
                "spip/compresseur",
                "spip/dump",
                "spip/images",
                "spip/forum",
                "spip/mediabox",
                "spip/medias",
                "spip/mots",
                "spip/plan",
                "spip/porte-plume",
                "spip/revisions",
                "spip/safehtml",
                "spip/sites",
                "spip/stats",
                "spip/svp",
                "spip/tw",
                "spip/urls"
            ],
            "private_template": "spip/prive",
            "template": "spip/dist"
        }
    }
}
